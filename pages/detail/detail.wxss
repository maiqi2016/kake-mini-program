/*轮播图  */
.carousel-detail{
  height: 500rpx;
  position: relative;
}
.focus-number{
  position: absolute;
  right: 30rpx;
  color: #fff;
  bottom: 20rpx;
  font-size: 15px;
}
.hotel-detail{
  position: relative;
  padding: 20px 14px 14px 14px;
  text-align: center;
}
.hotel-detail-2-1{
  font-size: 15px;
  color: #464646;
}

/*酒店详情样式  */
.classify{
  width: 90%;
  margin: 0 5%;
  background-color: #2d3e50;
  border: 1px solid #2d3e50;
  box-shadow: 0 0 10rpx rgba(8, 10, 10, 0.5);
  border-radius: 12rpx;
}
.classify .classify-1{
  height: 90rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 17px;
  width: 100%;
}
.classify .classify-1 .classify-1-1{
  width: 50%;
  float: left;
  color: #fff;
}
.select{
  display: inline-block;
  height: 86rpx;
  border-bottom: 2px solid #ffcc00;
  padding: 0 44rpx;
  color: #ffd000;
} 
.classify .classify-1 .thinner-border{
  width: 10rpx;
  border-left: 20rpx solid #E0DFDF;
  float: left;
}
.classify .classify-1 .classify-1-2{
  width: 50%;
  float: right;
  color: #fff;
}
/*酒店信息  */
.detail-hotel_1{
  padding-bottom: 160rpx;
}
.detail-hotel{
  margin: 0 30rpx;
}
.detail-hotel-1{
  font-size: 18px;
  color: #000;
  margin-top: 64rpx;
  text-align: center;
}
.detail-hotel-2{
  color: #464646;
  margin-top: 44rpx;
  padding-bottom: 46rpx;
  font-size: 14px;
  line-height: 60rpx;
  word-break: break-all;
  word-wrap: break-word;
  white-space: normal;
  border-bottom: 1px solid #e6e6e6;
}
.detail-hotel-2 .w{
  font-weight: 700;
}
.detail-hotel_2 {
  border: none;
}

/*底部固定导航  */
.footer{
  width: 100%;
  position: fixed;
  bottom: 20rpx;
  text-align: center;
}
.footer .buy{
  background-color: #2d3e50;
  text-align: center;
  font-size: 20px;
  padding-top: 52rpx;
  width: 190rpx;
  height: 150rpx;
  display: inline-table;
  border-radius: 50%;
  opacity: 0.8;
  color: #fff;
}
.footer .buy .price{
  font-size: 24px;
  font-weight: bold;
  color: #FFD000;    
}
.footer .service{
  width: 72rpx;
  height: 72rpx;
  position: absolute;
  left: 44rpx;
  top: 72rpx;
  background-color: #2d3e50;
  border-radius: 50%;
  z-index: 20;
  opacity: 0.8;
}
.footer .service .service-p{
  margin: 12rpx 0;
}
.footer .back-top{
  width: 72rpx;
  height: 72rpx;
  position: absolute;
  right: 44rpx;
  top: 72rpx;
  background-color: #2d3e50;
  border-radius: 50%;
  z-index: 20;
  opacity: 0.8;
}
.footer .back-top image{
  margin: 12rpx 0;
}
